<html>
    <head>
        <title> Media Player</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <link rel="stylesheet" href="/mediaPlayer.css">
        <style>
            audio{
                width: 100%;
            }
            .music{
                display: flex;
                flex-direction: column;
            }
            .musicList{
                flex: 1;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="music">
                <div class="uploadmusic">
                    <a href="/uploadsong">upload</a>
                </div>
                <div class="musicList">
                </div>
            </div>
            <div class="player">
                <div class="musicinfo">
                    
                </div>
                <div class="controller">
                    <div class="progress">
                        <audio controls src="" />
                    </div>
                    <div class="action">
                        <div class="prevsong">
                            <span>prev</span>
                        </div>
                        <div class="pauseandplay">
                            <span>action</span>
                        </div>
                        <div class="nextsong">
                            <span>next</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="/mediaPlayer.js"></script>
    </body>
</html>